@model ServiceRequestApp.ViewModels.RequesterDashboardViewModel
@{
    ViewData["Title"] = "Requester Dashboard";
}
<h2>Requester Dashboard</h2>
<div class="row">
    <div class="col-md-4">
        <div class="card text-white bg-primary mb-3">
            <div class="card-body">
                <h5 class="card-title">Requests Created</h5>
                <p class="card-text display-4">@Model.CreatedCount</p>
            </div>
        </div>
    </div>
    <div class="col-md-4">
        <div class="card text-white bg-info mb-3">
            <div class="card-body">
                <h5 class="card-title">Completed Requests</h5>
                <p class="card-text display-4">@Model.CompletedCount</p>
            </div>
        </div>
    </div>
    <div class="col-md-4">
        <div class="card text-white bg-warning mb-3">
            <div class="card-body">
                <h5 class="card-title">Total Spent</h5>
                <p class="card-text display-4">@Model.TotalSpent.ToString("C")</p>
            </div>
        </div>
    </div>
</div>
<div class="mt-4">
    <a asp-controller="Account" asp-action="EditRequesterProfile" class="btn btn-outline-primary">
        <i class="fas fa-user-edit me-2"></i>Edit Profile
    </a>
    <a asp-controller="Account" asp-action="RequesterProfile" asp-route-id="@User.FindFirst(System.Security.Claims.ClaimTypes.NameIdentifier)?.Value" class="btn btn-link">View Profile</a>
</div>
