@model ServiceRequestApp.ViewModels.ProviderDashboardViewModel
@using ServiceRequestApp.Models
@{
    ViewData["Title"] = "Tasker Dashboard";
    Layout = "~/Views/Shared/_Layout.cshtml";
    var availableRequests = ViewBag.AvailableRequests as List<ServiceRequestApp.Models.ServiceRequest>;
}
<h2>Tasker Dashboard</h2>
<div class="row">
    <div class="col-md-4">
        <div class="card text-white bg-success mb-3">
            <div class="card-body">
                <h5 class="card-title">Accepted Requests</h5>
                <p class="card-text display-4">@Model.AcceptedCount</p>
            </div>
        </div>
    </div>
    <div class="col-md-4">
        <div class="card text-white bg-info mb-3">
            <div class="card-body">
                <h5 class="card-title">Completed Requests</h5>
                <p class="card-text display-4">@Model.CompletedCount</p>
            </div>
        </div>
    </div>
    <div class="col-md-4">
        <div class="card text-white bg-warning mb-3">
            <div class="card-body">
                <h5 class="card-title">Total Earnings</h5>
                <p class="card-text display-4">@Model.TotalEarnings.ToString("C")</p>
            </div>
        </div>
    </div>
</div>
<div class="mt-4 mb-4">
    <a asp-controller="Account" asp-action="EditTaskerProfile" class="btn btn-outline-primary">
        <i class="fas fa-user-edit me-2"></i>Edit Profile
    </a>
    <a asp-controller="Account" asp-action="TaskerProfile" asp-route-id="@User.FindFirst(System.Security.Claims.ClaimTypes.NameIdentifier)?.Value" class="btn btn-link">View Profile</a>
    <a asp-controller="ServiceRequest" asp-action="ProviderConversations" class="btn btn-outline-info ms-2">My Messages</a>
</div>
@if (availableRequests != null && availableRequests.Any())
{
    <h3>Available Service Requests</h3>
    <div class="row g-4">
        @foreach (var item in availableRequests)
        {
            <div class="col-md-6">
                <div class="card h-100 shadow-sm hover-shadow">
                    <div class="card-header bg-light">
                        <div class="d-flex justify-content-between align-items-center">
                            <h5 class="card-title mb-0">@item.Title</h5>
                            <span class="badge bg-warning">@item.Status</span>
                        </div>
                    </div>
                    <div class="card-body">
                        <h6 class="card-subtitle mb-3 text-primary">
                            <i class="fas fa-tools me-2"></i>@item.ServiceType
                        </h6>
                        <p class="card-text">@item.Description</p>
                        <div class="mb-2">
                            <strong>Category:</strong> @(item.Category?.Name ?? "N/A") <br />
                            <strong>Address:</strong> @item.Address <br />
                            <strong>Zipcode:</strong> @item.Zipcode <br />
                            <strong>Price:</strong> @item.Price.ToString("C") <br />
                            <strong>Deadline:</strong> @(item.Deadline?.ToString("d") ?? "N/A")
                        </div>
                        <div class="text-muted small mb-3">
                            <i class="far fa-clock me-1"></i>
                            Created: @item.CreatedAt.ToString("MMM dd, yyyy HH:mm")
                        </div>
                        <div class="d-flex gap-2 flex-wrap">
                            <a asp-action="Details" asp-route-id="@item.Id"
                               class="btn btn-outline-info">
                                <i class="fas fa-info-circle"></i> Details
                            </a>
                        </div>
                    </div>
                </div>
            </div>
        }
    </div>
}
else
{
    <div class="alert alert-info">No available service requests at the moment.</div>
}
