@{
    ViewData["Title"] = "My Invoices";
    var invoices = ViewBag.Invoices as IEnumerable<ServiceRequestApp.Models.Invoice>;
    var currentUser = ViewBag.CurrentUser as ServiceRequestApp.Models.ApplicationUser;
}

<div class="container mt-4">
    <div class="row">
        <div class="col-12">
            <div class="d-flex justify-content-between align-items-center mb-4">
                <h2><i class="fas fa-file-invoice me-2"></i>My Invoices</h2>
                <a href="@Url.Action("Index", "Payment")" class="btn btn-outline-primary">
                    <i class="fas fa-arrow-left me-2"></i>Back to Payments
                </a>
            </div>

            @if (invoices != null && invoices.Any())
            {
                <div class="row">
                    @foreach (var invoice in invoices)
                    {
                        <div class="col-lg-6 col-xl-4 mb-4">
                            <div class="card h-100">
                                <div class="card-header d-flex justify-content-between align-items-center">
                                    <h6 class="mb-0">@invoice.InvoiceNumber</h6>
                                    <span class="badge bg-success">@invoice.Status</span>
                                </div>
                                <div class="card-body">
                                    <div class="mb-3">
                                        <h6 class="text-muted">Service Request</h6>
                                        <p class="mb-1"><strong>ID:</strong> #@invoice.ServiceRequestId</p>
                                        <p class="mb-1"><strong>Date:</strong> @invoice.CreatedAt.ToString("MMM dd, yyyy")</p>
                                    </div>
                                    
                                    <div class="mb-3">
                                        <h6 class="text-muted">Amount Details</h6>
                                        <p class="mb-1"><strong>Total:</strong> @invoice.TotalAmount.ToString("N0") BDT</p>
                                        <p class="mb-1"><strong>Commission:</strong> @invoice.AdminCommission.ToString("N0") BDT</p>
                                        <p class="mb-1"><strong>Provider:</strong> @invoice.ProviderAmount.ToString("N0") BDT</p>
                                    </div>
                                    
                                    <div class="mb-3">
                                        <h6 class="text-muted">Parties</h6>
                                        @if (invoice.RequesterId == currentUser.Id)
                                        {
                                            <p class="mb-1"><strong>You paid to:</strong> @(invoice.Provider?.FirstName) @(invoice.Provider?.LastName)</p>
                                        }
                                        else
                                        {
                                            <p class="mb-1"><strong>Paid by:</strong> @(invoice.Requester?.FirstName) @(invoice.Requester?.LastName)</p>
                                        }
                                    </div>
                                </div>
                                <div class="card-footer bg-transparent">
                                    <div class="btn-group w-100" role="group">
                                        <a href="@Url.Action("ViewInvoice", "Payment", new { invoiceId = invoice.Id })" class="btn btn-outline-primary btn-sm">
                                            <i class="fas fa-eye me-1"></i>View
                                        </a>
                                        <a href="@Url.Action("ViewInvoice", "Payment", new { invoiceId = invoice.Id })" class="btn btn-outline-secondary btn-sm" target="_blank">
                                            <i class="fas fa-print me-1"></i>Print
                                        </a>
                                        <a href="@Url.Action("Details", "ServiceRequest", new { id = invoice.ServiceRequestId })" class="btn btn-outline-info btn-sm">
                                            <i class="fas fa-clipboard-list me-1"></i>Service
                                        </a>
                                    </div>
                                </div>
                            </div>
                        </div>
                    }
                </div>
            }
            else
            {
                <div class="text-center py-5">
                    <i class="fas fa-file-invoice fa-3x text-muted mb-3"></i>
                    <h4 class="text-muted">No Invoices Found</h4>
                    <p class="text-muted">You don't have any invoices yet. Invoices are generated when payments are completed.</p>
                    <a href="@Url.Action("Index", "ServiceRequest")" class="btn btn-primary">
                        <i class="fas fa-plus me-2"></i>Create Service Request
                    </a>
                </div>
            }
        </div>
    </div>
</div>

@section Styles {
    <style>
        .card {
            transition: transform 0.2s ease-in-out;
            box-shadow: 0 0.125rem 0.25rem rgba(0, 0, 0, 0.075);
        }
        
        .card:hover {
            transform: translateY(-2px);
            box-shadow: 0 0.5rem 1rem rgba(0, 0, 0, 0.15);
        }
        
        .card-header {
            border-bottom: 1px solid rgba(0, 0, 0, 0.125);
        }
        
        .card-footer {
            border-top: 1px solid rgba(0, 0, 0, 0.125);
        }
    </style>
}
