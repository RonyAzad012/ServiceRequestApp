@model ServiceRequestApp.ViewModels.PaymentProcessViewModel
@{
    ViewData["Title"] = "Process Payment";
    Layout = "~/Views/Shared/_Layout.cshtml";
    var serviceRequest = ViewBag.ServiceRequest as ServiceRequestApp.Models.ServiceRequest;
    var currentUser = ViewBag.CurrentUser as ServiceRequestApp.Models.ApplicationUser;
}

<div class="container-fluid py-4">
    <!-- Header -->
    <div class="row mb-4">
        <div class="col-12">
            <div class="d-flex align-items-center">
                <a href="@Url.Action("Details", "ServiceRequest", new { id = serviceRequest.Id })" class="btn btn-outline-secondary me-3">
                    <i class="fas fa-arrow-left"></i>
                </a>
                <div>
                    <h2 class="mb-0">Process Payment</h2>
                    <p class="text-muted mb-0">Complete payment for your service request</p>
                </div>
            </div>
        </div>
    </div>

    <div class="row">
        <!-- Payment Form -->
        <div class="col-lg-8">
            <div class="card border-0 shadow-sm">
                <div class="card-header bg-white border-0 py-3">
                    <h5 class="mb-0">
                        <i class="fas fa-credit-card me-2 text-primary"></i>Payment Information
                    </h5>
                </div>
                <div class="card-body">
                    <form asp-action="Process" method="post" id="paymentForm">
                        <input type="hidden" asp-for="ServiceRequestId" />
                        <input type="hidden" asp-for="Amount" />
                        
                        <!-- Payment Method Selection -->
                        <div class="mb-4">
                            <label class="form-label">Payment Method</label>
                            <div class="row">
                                <div class="col-md-4 mb-2">
                                    <div class="form-check">
                                        <input class="form-check-input" type="radio" name="PaymentMethod" value="Card" id="cardPayment" checked>
                                        <label class="form-check-label" for="cardPayment">
                                            <i class="fas fa-credit-card me-2"></i>Credit/Debit Card
                                        </label>
                                    </div>
                                </div>
                                <div class="col-md-4 mb-2">
                                    <div class="form-check">
                                        <input class="form-check-input" type="radio" name="PaymentMethod" value="bKash" id="bkashPayment">
                                        <label class="form-check-label" for="bkashPayment">
                                            <i class="fas fa-mobile-alt me-2"></i>bKash
                                        </label>
                                    </div>
                                </div>
                                <div class="col-md-4 mb-2">
                                    <div class="form-check">
                                        <input class="form-check-input" type="radio" name="PaymentMethod" value="Nagad" id="nagadPayment">
                                        <label class="form-check-label" for="nagadPayment">
                                            <i class="fas fa-mobile-alt me-2"></i>Nagad
                                        </label>
                                    </div>
                                </div>
                            </div>
                        </div>

                        <!-- Card Payment Details -->
                        <div id="cardDetails" class="payment-method-details">
                            <div class="row">
                                <div class="col-12 mb-3">
                                    <label asp-for="CardNumber" class="form-label">Card Number</label>
                                    <input asp-for="CardNumber" class="form-control" placeholder="1234 5678 9012 3456" maxlength="19">
                                    <span asp-validation-for="CardNumber" class="text-danger"></span>
                                </div>
                                <div class="col-md-6 mb-3">
                                    <label asp-for="ExpiryDate" class="form-label">Expiry Date</label>
                                    <input asp-for="ExpiryDate" class="form-control" placeholder="MM/YY" maxlength="5">
                                    <span asp-validation-for="ExpiryDate" class="text-danger"></span>
                                </div>
                                <div class="col-md-6 mb-3">
                                    <label asp-for="CVV" class="form-label">CVV</label>
                                    <input asp-for="CVV" class="form-control" placeholder="123" maxlength="4">
                                    <span asp-validation-for="CVV" class="text-danger"></span>
                                </div>
                                <div class="col-12 mb-3">
                                    <label asp-for="CardholderName" class="form-label">Cardholder Name</label>
                                    <input asp-for="CardholderName" class="form-control" placeholder="John Doe">
                                    <span asp-validation-for="CardholderName" class="text-danger"></span>
                                </div>
                            </div>
                        </div>

                        <!-- Mobile Banking Details -->
                        <div id="mobileDetails" class="payment-method-details" style="display: none;">
                            <div class="row">
                                <div class="col-12 mb-3">
                                    <label asp-for="MobileNumber" class="form-label">Mobile Number</label>
                                    <input asp-for="MobileNumber" class="form-control" placeholder="01XXXXXXXXX">
                                    <span asp-validation-for="MobileNumber" class="text-danger"></span>
                                </div>
                                <div class="col-12 mb-3">
                                    <label asp-for="Pin" class="form-label">PIN</label>
                                    <input asp-for="Pin" class="form-control" placeholder="Enter your PIN" type="password">
                                    <span asp-validation-for="Pin" class="text-danger"></span>
                                </div>
                            </div>
                        </div>

                        <!-- Security Notice -->
                        <div class="alert alert-info">
                            <i class="fas fa-shield-alt me-2"></i>
                            <strong>Secure Payment:</strong> Your payment information is encrypted and secure. We use industry-standard security measures to protect your data.
                        </div>

                        <!-- Submit Button -->
                        <div class="d-grid">
                            <button type="submit" class="btn btn-primary btn-lg" id="submitPayment">
                                <i class="fas fa-lock me-2"></i>Pay ৳@Model.Amount.ToString("N2")
                            </button>
                        </div>
                    </form>
                </div>
            </div>
        </div>

        <!-- Payment Summary -->
        <div class="col-lg-4">
            <div class="card border-0 shadow-sm">
                <div class="card-header bg-white border-0 py-3">
                    <h5 class="mb-0">
                        <i class="fas fa-receipt me-2 text-success"></i>Payment Summary
                    </h5>
                </div>
                <div class="card-body">
                    <!-- Service Request Details -->
                    <div class="mb-4">
                        <h6 class="text-muted mb-2">Service Request</h6>
                        <p class="fw-bold mb-1">@serviceRequest.Title</p>
                        <p class="text-muted small mb-0">@serviceRequest.Description</p>
                    </div>

                    <!-- Payment Breakdown -->
                    <div class="mb-3">
                        <div class="d-flex justify-content-between mb-2">
                            <span>Service Amount:</span>
                            <span>৳@Model.Amount.ToString("N2")</span>
                        </div>
                        <div class="d-flex justify-content-between mb-2">
                            <span>Processing Fee:</span>
                            <span>৳0.00</span>
                        </div>
                        <hr>
                        <div class="d-flex justify-content-between fw-bold">
                            <span>Total Amount:</span>
                            <span>৳@Model.Amount.ToString("N2")</span>
                        </div>
                    </div>

                    <!-- Provider Information -->
                    @if (serviceRequest.Provider != null)
                    {
                        <div class="mb-3">
                            <h6 class="text-muted mb-2">Service Provider</h6>
                            <div class="d-flex align-items-center">
                                <div class="flex-shrink-0 me-2">
                                    <div class="rounded-circle bg-primary text-white d-flex align-items-center justify-content-center" 
                                         style="width: 30px; height: 30px;">
                                        <i class="fas fa-user"></i>
                                    </div>
                                </div>
                                <div class="flex-grow-1">
                                    <p class="mb-0 fw-bold">@serviceRequest.Provider.FirstName @serviceRequest.Provider.LastName</p>
                                    <small class="text-muted">@serviceRequest.Provider.UserType</small>
                                </div>
                            </div>
                        </div>
                    }

                    <!-- Payment Security -->
                    <div class="text-center">
                        <small class="text-muted">
                            <i class="fas fa-lock me-1"></i>
                            SSL Secured Payment
                        </small>
                    </div>
                </div>
            </div>

            <!-- Help Card -->
            <div class="card border-0 shadow-sm mt-3">
                <div class="card-header bg-white border-0 py-3">
                    <h6 class="mb-0">
                        <i class="fas fa-question-circle me-2 text-info"></i>Need Help?
                    </h6>
                </div>
                <div class="card-body">
                    <p class="small text-muted mb-2">Having trouble with payment?</p>
                    <div class="d-grid gap-2">
                        <a href="#" class="btn btn-outline-info btn-sm">
                            <i class="fas fa-phone me-1"></i>Contact Support
                        </a>
                        <a href="#" class="btn btn-outline-secondary btn-sm">
                            <i class="fas fa-question-circle me-1"></i>FAQ
                        </a>
                    </div>
                </div>
            </div>
        </div>
    </div>
</div>

@section Scripts {
    <script>
        $(document).ready(function() {
            // Handle payment method change
            $('input[name="PaymentMethod"]').on('change', function() {
                const method = $(this).val();
                
                if (method === 'Card') {
                    $('#cardDetails').show();
                    $('#mobileDetails').hide();
                } else {
                    $('#cardDetails').hide();
                    $('#mobileDetails').show();
                }
            });

            // Format card number
            $('#CardNumber').on('input', function() {
                let value = $(this).val().replace(/\s/g, '').replace(/[^0-9]/gi, '');
                let formattedValue = value.match(/.{1,4}/g)?.join(' ') || value;
                $(this).val(formattedValue);
            });

            // Format expiry date
            $('#ExpiryDate').on('input', function() {
                let value = $(this).val().replace(/\D/g, '');
                if (value.length >= 2) {
                    value = value.substring(0, 2) + '/' + value.substring(2, 4);
                }
                $(this).val(value);
            });

            // Handle form submission
            $('#paymentForm').on('submit', function(e) {
                const submitBtn = $('#submitPayment');
                submitBtn.prop('disabled', true);
                submitBtn.html('<i class="fas fa-spinner fa-spin me-2"></i>Processing...');
                
                // Re-enable button after 5 seconds in case of error
                setTimeout(function() {
                    submitBtn.prop('disabled', false);
                    submitBtn.html('<i class="fas fa-lock me-2"></i>Pay ৳@Model.Amount.ToString("N2")');
                }, 5000);
            });
        });
    </script>
}

<style>
    .payment-method-details {
        border: 1px solid #e9ecef;
        border-radius: 0.375rem;
        padding: 1rem;
        background-color: #f8f9fa;
    }
    
    .form-check-input:checked + .form-check-label {
        color: #0d6efd;
        font-weight: 500;
    }
    
    .card {
        transition: box-shadow 0.15s ease-in-out;
    }
    
    .card:hover {
        box-shadow: 0 0.5rem 1rem rgba(0, 0, 0, 0.15) !important;
    }
</style>

