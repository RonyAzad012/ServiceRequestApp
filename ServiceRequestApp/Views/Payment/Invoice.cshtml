@model ServiceRequestApp.Models.PaymentTransaction
@{
    ViewData["Title"] = "Invoice";
    var sr = ViewBag.ServiceRequest as ServiceRequestApp.Models.ServiceRequest;
}

<div class="container py-4">
    <div class="row justify-content-center">
        <div class="col-lg-8">
            <div class="card shadow-sm">
                <div class="card-header bg-white">
                    <div class="d-flex justify-content-between align-items-center">
                        <h5 class="mb-0"><i class="fas fa-file-invoice me-2"></i>Invoice</h5>
                        <a class="btn btn-outline-secondary btn-sm" href="@Url.Action("Details", "ServiceRequest", new { id = sr?.Id })">
                            <i class="fas fa-arrow-left me-1"></i>Back to Details
                        </a>
                    </div>
                </div>
                <div class="card-body">
                    <div class="mb-4">
                        <h6 class="text-muted">Billed To</h6>
                        <div>@sr?.Requester?.FirstName @sr?.Requester?.LastName</div>
                        <div>@sr?.Address</div>
                    </div>

                    <div class="mb-4">
                        <h6 class="text-muted">Invoice Details</h6>
                        <div class="row">
                            <div class="col-md-6">
                                <div><strong>Invoice No:</strong> @Model.TransactionId</div>
                                <div><strong>Date:</strong> @Model.TransactionDate.ToString("g")</div>
                            </div>
                            <div class="col-md-6">
                                <div><strong>Status:</strong> @Model.Status</div>
                                <div><strong>Currency:</strong> @Model.Currency</div>
                            </div>
                        </div>
                    </div>

                    <div class="table-responsive mb-3">
                        <table class="table table-bordered">
                            <thead class="table-light">
                                <tr>
                                    <th>Description</th>
                                    <th class="text-end">Amount (à§³)</th>
                                </tr>
                            </thead>
                            <tbody>
                                <tr>
                                    <td>Service Request #@sr?.Id - @sr?.Title</td>
                                    <td class="text-end">@Model.Amount.ToString("N2")</td>
                                </tr>
                                <tr>
                                    <td>Admin Commission</td>
                                    <td class="text-end">@((Model.AdminCommissionAmount ?? 0M).ToString("N2"))</td>
                                </tr>
                                <tr>
                                    <td>Provider Receives</td>
                                    <td class="text-end">@((Model.ProviderReceivedAmount ?? 0M).ToString("N2"))</td>
                                </tr>
                                <tr class="table-light">
                                    <th>Total Paid</th>
                                    <th class="text-end">@Model.Amount.ToString("N2")</th>
                                </tr>
                            </tbody>
                        </table>
                    </div>

                    <div class="d-flex justify-content-between">
                        <div class="text-muted small">Thank you for your payment.</div>
                        <button class="btn btn-outline-primary" onclick="window.print()">
                            <i class="fas fa-print me-1"></i>Print
                        </button>
                    </div>
                </div>
            </div>
        </div>
    </div>
</div>



