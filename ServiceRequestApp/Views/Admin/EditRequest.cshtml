@model ServiceRequestApp.Models.ServiceRequest
@{
    ViewData["Title"] = "Edit Service Request";
    Layout = "~/Views/Shared/_AdminLayout.cshtml";
}

<h1>Edit Service Request</h1>
<form asp-action="EditRequest" method="post">
    <input type="hidden" asp-for="Id" />
    <div class="mb-3">
        <label asp-for="Title" class="form-label"></label>
        <input asp-for="Title" class="form-control" />
    </div>
    <div class="mb-3">
        <label asp-for="Description" class="form-label"></label>
        <textarea asp-for="Description" class="form-control"></textarea>
    </div>
    <div class="mb-3">
        <label asp-for="CategoryId" class="form-label"></label>
        <select asp-for="CategoryId" class="form-control" asp-items="@(new SelectList(ViewBag.Categories, "Id", "Name"))">
            <option value="">Select a category</option>
        </select>
    </div>
    <div class="mb-3">
        <label asp-for="Status" class="form-label"></label>
        <input asp-for="Status" class="form-control" />
    </div>
    <button type="submit" class="btn btn-primary">Save</button>
    <a asp-action="ServiceRequests" class="btn btn-secondary">Cancel</a>
</form>
