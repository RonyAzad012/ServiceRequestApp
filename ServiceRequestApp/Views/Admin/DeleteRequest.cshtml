@model ServiceRequestApp.Models.ServiceRequest
@{
    ViewData["Title"] = "Delete Service Request";
    Layout = "~/Views/Shared/_AdminLayout.cshtml";
}

<h1>Delete Service Request</h1>
<div class="alert alert-danger">Are you sure you want to delete this service request?</div>
<dl class="row">
    <dt class="col-sm-2">Title</dt>
    <dd class="col-sm-10">@Model.Title</dd>
    <dt class="col-sm-2">Type</dt>
    <dd class="col-sm-10">@Model.ServiceType</dd>
    <dt class="col-sm-2">Status</dt>
    <dd class="col-sm-10">@Model.Status</dd>
</dl>
<form asp-action="DeleteRequest" method="post">
    <input type="hidden" asp-for="Id" />
    <button type="submit" class="btn btn-danger">Delete</button>
    <a asp-action="ServiceRequests" class="btn btn-secondary">Cancel</a>
</form>
