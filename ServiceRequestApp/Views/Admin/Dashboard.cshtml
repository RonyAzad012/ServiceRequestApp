@model ServiceRequestApp.ViewModels.AdminDashboardViewModel
@{
    ViewData["Title"] = "Admin Dashboard";
    Layout = "~/Views/Shared/_AdminLayout.cshtml";
}

<h1>Admin Dashboard</h1>
<div class="row">
    <div class="col-md-4">
        <div class="card text-white bg-primary mb-3">
            <div class="card-body">
                <h5 class="card-title">Total Users</h5>
                <p class="card-text display-4">@Model.UserCount</p>
            </div>
        </div>
    </div>
    <div class="col-md-4">
        <div class="card text-white bg-success mb-3">
            <div class="card-body">
                <h5 class="card-title">Service Requests</h5>
                <p class="card-text display-4">@Model.ServiceRequestCount</p>
                <a asp-controller="Admin" asp-action="ServiceRequests" class="btn btn-light mt-3">
                    <i class="fas fa-tasks me-2"></i>View Requests
                </a>
            </div>
        </div>
    </div>
</div>
