@model ServiceRequestApp.Models.ApplicationUser
@{
    ViewData["Title"] = "Delete User";
    Layout = "~/Views/Shared/_AdminLayout.cshtml";
}

<h1>Delete User</h1>
<div class="alert alert-danger">Are you sure you want to delete this user?</div>
<dl class="row">
    <dt class="col-sm-2">Email</dt>
    <dd class="col-sm-10">@Model.Email</dd>
    <dt class="col-sm-2">Name</dt>
    <dd class="col-sm-10">@Model.FirstName @Model.LastName</dd>
</dl>
<form asp-action="DeleteUser" method="post">
    <input type="hidden" asp-for="Id" />
    <button type="submit" class="btn btn-danger">Delete</button>
    <a asp-action="Users" class="btn btn-secondary">Cancel</a>
</form>
