@model IEnumerable<ServiceRequestApp.Models.Review>

<div class="reviews-section">
    <h5 class="mb-3">
        <i class="fas fa-star me-2 text-warning"></i>Reviews
        <span class="badge bg-primary ms-2">@Model.Count()</span>
    </h5>
    
    @if (Model.Any())
    {
        <div class="reviews-list">
            @foreach (var review in Model)
            {
                <div class="review-item border rounded p-3 mb-3">
                    <div class="d-flex justify-content-between align-items-start mb-2">
                        <div>
                            <h6 class="mb-1">@(review.Reviewer?.FirstName) @(review.Reviewer?.LastName)</h6>
                            <div class="rating-display">
                                @for (int i = 1; i <= 5; i++)
                                {
                                    <i class="fas fa-star @(i <= review.Rating ? "text-warning" : "text-muted")"></i>
                                }
                            </div>
                        </div>
                        <small class="text-muted">@review.CreatedAt.ToString("MMM dd, yyyy")</small>
                    </div>
                    
                    @if (!string.IsNullOrEmpty(review.Comment))
                    {
                        <p class="mb-0 text-muted">@review.Comment</p>
                    }
                    
                    <div class="mt-2">
                        <small class="text-muted">
                            <i class="fas fa-tools me-1"></i>Service: @review.ServiceRequest?.Title
                        </small>
                    </div>
                </div>
            }
        </div>
    }
    else
    {
        <div class="text-center py-4 text-muted">
            <i class="fas fa-star fa-3x mb-3"></i>
            <p>No reviews yet</p>
        </div>
    }
</div>

<style>
    .rating-display .fas.fa-star {
        font-size: 0.9rem;
    }
    
    .review-item {
        background: #f8f9fa;
        transition: transform 0.2s;
    }
    
    .review-item:hover {
        transform: translateY(-2px);
        box-shadow: 0 4px 8px rgba(0,0,0,0.1);
    }
</style>


