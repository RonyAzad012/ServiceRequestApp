@* Admin Panel Layout with Sidebar *@
<!DOCTYPE html>
<html lang="en">
<head>
    <meta charset="utf-8" />
    <meta name="viewport" content="width=device-width, initial-scale=1.0" />
    <title>@ViewData["Title"] - Admin Panel</title>
    <link href="https://cdn.jsdelivr.net/npm/bootstrap@5.1.3/dist/css/bootstrap.min.css" rel="stylesheet">
    <link rel="stylesheet" href="~/css/site.css" asp-append-version="true" />
    <link rel="stylesheet" href="https://cdnjs.cloudflare.com/ajax/libs/font-awesome/6.4.0/css/all.min.css">
    @await RenderSectionAsync("Styles", required: false)
    <style>
        body {
            min-height: 100vh;
            display: flex;
        }
        .sidebar {
            width: 220px;
            background: #1b263b;
            color: #fff;
            min-height: 100vh;
            position: fixed;
            top: 0;
            left: 0;
            padding-top: 60px;
        }
        .sidebar .nav-link {
            color: #fff;
        }
        .sidebar .nav-link.active, .sidebar .nav-link:hover {
            background: #415a77;
            color: #fff;
        }
        .admin-content {
            margin-left: 220px;
            padding: 2rem;
            width: 100%;
        }
    </style>
</head>
<body>
    <div class="sidebar d-flex flex-column p-3">
        <h3 class="mb-4 text-center">Admin Panel</h3>
        <ul class="nav nav-pills flex-column mb-auto">
            <li class="nav-item">
                <a class="nav-link @((ViewContext.RouteData.Values["action"] as string == "Dashboard") ? "active" : "")" asp-controller="Admin" asp-action="Dashboard">
                    <i class="fas fa-tachometer-alt me-2"></i> Dashboard
                </a>
            </li>
            <li>
                <a class="nav-link @((ViewContext.RouteData.Values["action"] as string == "Users") ? "active" : "")" asp-controller="Admin" asp-action="Users">
                    <i class="fas fa-users me-2"></i> Users
                </a>
            </li>
            <li>
                <a class="nav-link @((ViewContext.RouteData.Values["action"] as string == "ServiceRequests") ? "active" : "")" asp-controller="Admin" asp-action="ServiceRequests">
                    <i class="fas fa-tasks me-2"></i> Service Requests
                </a>
            </li>
        </ul>
        <hr />
        <a class="nav-link text-white" asp-controller="Home" asp-action="Index">
            <i class="fas fa-home me-2"></i> Back to Site
        </a>
    </div>
    <div class="admin-content">
        @RenderBody()
    </div>
    <script src="https://cdn.jsdelivr.net/npm/bootstrap@5.1.3/dist/js/bootstrap.bundle.min.js"></script>
    <script src="~/js/site.js" asp-append-version="true"></script>
    @await RenderSectionAsync("Scripts", required: false)
</body>
</html>
