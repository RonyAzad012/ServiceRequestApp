@{
    ViewData["Title"] = "Home";
    var categories = ViewBag.Categories as List<ServiceRequestApp.Models.Category>;
}

<style>
    .location-autocomplete-wrapper {
        position: relative;
        width: 35%;
    }
    #locationSuggestions {
        position: absolute;
        top: 100%;
        left: 0;
        right: 0;
        z-index: 1000;
        max-height: 220px;
        overflow-y: auto;
        border: 1px solid #ddd;
        border-top: none;
        background: #fff;
        box-shadow: 0 2px 8px rgba(0,0,0,0.08);
        width: 100%;
    }
    #locationSuggestions .dropdown-item {
        white-space: normal;
        font-size: 1rem;
        padding: 0.5rem 1rem;
    }
    .location-geolocate-btn {
        position: absolute;
        right: 10px;
        top: 50%;
        transform: translateY(-50%);
        background: none;
        border: none;
        color: #007bff;
        font-size: 1.2rem;
        cursor: pointer;
        z-index: 1100;
    }
</style>

<div class="hero-section text-center py-5 mb-5" style="background: url('/images/service-illustration.svg') center/cover no-repeat; min-height: 400px;">
    <div class="container">
        <h1 class="display-3 fw-bold mb-4">Find the Service You Need</h1>
        <form asp-action="Search" asp-controller="Home" method="get" class="d-flex justify-content-center align-items-center gap-2 mb-4" style="max-width: 700px; margin: 0 auto;">
            <div class="input-group" style="width: 40%;">
                <input id="categoryInput" name="category" class="form-control" placeholder="Select a category..." autocomplete="off" data-bs-toggle="dropdown" aria-haspopup="true" aria-expanded="false" />
                <ul class="dropdown-menu w-100" id="categoryDropdown">
                    @if (categories != null)
                    {
                        foreach (var cat in categories)
                        {
                            <li><a class="dropdown-item" href="#" onclick="selectCategory('@cat.Name')">@cat.Name</a></li>
                        }
                    }
                </ul>
            </div>
            <div class="location-autocomplete-wrapper">
                <input id="locationInput" name="location" class="form-control" placeholder="Enter your address or area..." autocomplete="off" />
                <button type="button" class="location-geolocate-btn" title="Use my current location" onclick="getCurrentLocation()">
                    <i class="fas fa-crosshairs"></i>
                </button>
                <div id="locationSuggestions" class="dropdown-menu"></div>
            </div>
            <button type="submit" class="btn btn-danger px-4"><i class="fas fa-search me-2"></i>Search</button>
        </form>
        <script>
            function selectCategory(name) {
                document.getElementById('categoryInput').value = name;
                document.getElementById('categoryDropdown').classList.remove('show');
            }
            document.getElementById('categoryInput').addEventListener('focus', function () {
                document.getElementById('categoryDropdown').classList.add('show');
            });
            document.addEventListener('click', function (e) {
                if (!document.getElementById('categoryInput').contains(e.target)) {
                    document.getElementById('categoryDropdown').classList.remove('show');
                }
            });
            // Location autocomplete using Nominatim
            const locationInput = document.getElementById('locationInput');
            const locationSuggestions = document.getElementById('locationSuggestions');
            locationInput.addEventListener('input', function () {
                const query = this.value;
                if (query.length < 3) {
                    locationSuggestions.classList.remove('show');
                    return;
                }
                fetch('https://nominatim.openstreetmap.org/search?format=json&q=' + encodeURIComponent(query))
                    .then(res => res.json())
                    .then(data => {
                        locationSuggestions.innerHTML = '';
                        data.slice(0, 5).forEach(function (item) {
                            const li = document.createElement('a');
                            li.className = 'dropdown-item';
                            li.href = '#';
                            li.textContent = item.display_name;
                            li.onclick = function () {
                                locationInput.value = item.display_name;
                                locationSuggestions.classList.remove('show');
                                return false;
                            };
                            locationSuggestions.appendChild(li);
                        });
                        if (data.length > 0) {
                            locationSuggestions.classList.add('show');
                        } else {
                            locationSuggestions.classList.remove('show');
                        }
                    });
            });
            document.addEventListener('click', function (e) {
                if (!locationInput.contains(e.target) && !locationSuggestions.contains(e.target)) {
                    locationSuggestions.classList.remove('show');
                }
            });
            // Geolocation
            function getCurrentLocation() {
                if (navigator.geolocation) {
                    navigator.geolocation.getCurrentPosition(function (position) {
                        const lat = position.coords.latitude;
                        const lon = position.coords.longitude;
                        fetch('https://nominatim.openstreetmap.org/reverse?format=json&lat=' + lat + '&lon=' + lon)
                            .then(res => res.json())
                            .then(data => {
                                if (data && data.display_name) {
                                    locationInput.value = data.display_name;
                                }
                            });
                    }, function (err) {
                        alert('Could not get your location.');
                    });
                } else {
                    alert('Geolocation is not supported by your browser.');
                }
            }
        </script>
        <p class="lead mb-4">Search for trusted service providers by category and location</p>
        <div class="d-flex justify-content-center gap-3">
            @if (!User.Identity.IsAuthenticated)
            {
                <a asp-controller="Account" asp-action="Register" class="btn btn-primary btn-lg">
                    <i class="fas fa-user-plus me-2"></i>Get Started
                </a>
                <a asp-controller="Account" asp-action="Login" class="btn btn-outline-primary btn-lg">
                    <i class="fas fa-sign-in-alt me-2"></i>Sign In
                </a>
                <a asp-controller="Account" asp-action="Register" asp-route-userType="Provider" class="btn btn-success btn-lg">
                    <i class="fas fa-briefcase me-2"></i>For Business
                </a>
                <a asp-controller="Account" asp-action="TaskerRegister" class="btn btn-info btn-lg">
                    <i class="fas fa-user-cog me-2"></i>Become a Tasker
                </a>
            }
            else
            {
                <a asp-controller="ServiceRequest" asp-action="Index" class="btn btn-primary btn-lg">
                    <i class="fas fa-list-ul me-2"></i>View Requests
                </a>
                @if (ViewBag.IsAdmin == true)
                {
                    <a asp-controller="Admin" asp-action="Dashboard" class="btn btn-warning btn-lg ms-2">
                        <i class="fas fa-user-shield me-2"></i>Admin Dashboard
                    </a>
                }
            }
        </div>
    </div>
</div>

<div class="container">
    <div class="row g-4 mb-5">
        <div class="col-md-4">
            <div class="feature-card text-center p-4">
                <div class="feature-icon mb-3">
                    <i class="fas fa-tasks fa-3x text-primary"></i>
                </div>
                <h3>Create Requests</h3>
                <p class="text-muted">Easily create and manage your service requests with our intuitive interface.</p>
            </div>
        </div>
        <div class="col-md-4">
            <div class="feature-card text-center p-4">
                <div class="feature-icon mb-3">
                    <i class="fas fa-handshake fa-3x text-primary"></i>
                </div>
                <h3>Connect</h3>
                <p class="text-muted">Connect with reliable service providers or find new clients in your area.</p>
            </div>
        </div>
        <div class="col-md-4">
            <div class="feature-card text-center p-4">
                <div class="feature-icon mb-3">
                    <i class="fas fa-star fa-3x text-primary"></i>
                </div>
                <h3>Quality Service</h3>
                <p class="text-muted">Experience high-quality service delivery and professional interactions.</p>
            </div>
        </div>
    </div>

    <div class="row align-items-center mb-5">
        <div class="col-md-6">
            <h2 class="display-6 mb-4">How It Works</h2>
            <div class="d-flex mb-3">
                <div class="step-number me-3">1</div>
                <div>
                    <h4>Create an Account</h4>
                    <p class="text-muted">Sign up as a service requester or provider.</p>
                </div>
            </div>
            <div class="d-flex mb-3">
                <div class="step-number me-3">2</div>
                <div>
                    <h4>Post or Browse Requests</h4>
                    <p class="text-muted">Create service requests or browse available opportunities.</p>
                </div>
            </div>
            <div class="d-flex">
                <div class="step-number me-3">3</div>
                <div>
                    <h4>Connect and Complete</h4>
                    <p class="text-muted">Connect with others and complete service requests.</p>
                </div>
            </div>
        </div>
        <div class="col-md-6">
            <img src="~/images/service-illustration.svg" alt="How it works" class="img-fluid" />
        </div>
    </div>
</div>