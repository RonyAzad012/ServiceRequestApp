                    <div class="search-form animate-fade-in-up">
                        <form asp-action="Search" asp-controller="Home" method="get" class="row g-3">
                            <div class="col-md-5">
                                <div class="form-floating">
                <input id="categoryInput" name="category" class="form-control" placeholder="Select a category..." autocomplete="off" data-bs-toggle="dropdown" aria-haspopup="true" aria-expanded="false" />
                                    <label for="categoryInput">What service do you need?</label>
                <ul class="dropdown-menu w-100" id="categoryDropdown">
                    @if (categories != null)
                    {
                        foreach (var cat in categories)
                        {
                            <li><a class="dropdown-item" href="#" onclick="selectCategory('@cat.Name')">@cat.Name</a></li>
                        }
                    }
                </ul>
            </div>
                            </div>
                            <div class="col-md-5">
                                <div class="form-floating position-relative">
                <input id="locationInput" name="location" class="form-control" placeholder="Enter your address or area..." autocomplete="off" />
                                    <label for="locationInput">Where are you located?</label>
                                    <button type="button" class="btn btn-link position-absolute top-50 end-0 translate-middle-y me-2" title="Use my current location" onclick="getCurrentLocation()">
                                        <i class="fas fa-crosshairs text-primary"></i>
                                    </button>
