                                    <i class="fas fa-search me-2"></i>Search
                </button>
                            </div>
                        </form>
                    </div>
                    
                    <!-- Quick Stats -->
                    <div class="quick-stats mt-5 animate-fade-in-up">
                        <div class="row text-center">
                            <div class="col-4">
                                <div class="stat-item">
                                    <h3 class="fw-bold text-white">500+</h3>
                                    <p class="text-white-50 mb-0">Service Providers</p>
                                </div>
                            </div>
                            <div class="col-4">
                                <div class="stat-item">
                                    <h3 class="fw-bold text-white">10K+</h3>
                                    <p class="text-white-50 mb-0">Completed Jobs</p>
                                </div>
                            </div>
                            <div class="col-4">
                                <div class="stat-item">
                                    <h3 class="fw-bold text-white">4.9★</h3>
                                    <p class="text-white-50 mb-0">Average Rating</p>
                                </div>
                            </div>
                        </div>
                    </div>
                </div>
            </div>
            <div class="col-lg-6">
                <div class="hero-image animate-fade-in-right">
                    <div class="hero-illustration">
                        <div class="floating-card card-1">
                            <i class="fas fa-tools text-primary"></i>
                            <span>Home Repair</span>
                        </div>
                        <div class="floating-card card-2">
                            <i class="fas fa-paint-brush text-success"></i>
                            <span>Cleaning</span>
                        </div>
                        <div class="floating-card card-3">
                            <i class="fas fa-laptop text-warning"></i>
                            <span>Tech Support</span>
                        </div>
                        <div class="floating-card card-4">
                            <i class="fas fa-car text-info"></i>
                            <span>Transportation</span>
                        </div>
                        <div class="main-illustration">
                            <i class="fas fa-handshake fa-5x text-white"></i>
                        </div>
                    </div>
                </div>
            </div>
        </div>
    </div>
</section>

