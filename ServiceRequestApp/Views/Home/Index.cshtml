        <script>
            function selectCategory(name) {
                document.getElementById('categoryInput').value = name;
                document.getElementById('categoryDropdown').classList.remove('show');
            }
    
            document.getElementById('categoryInput').addEventListener('focus', function () {
                document.getElementById('categoryDropdown').classList.add('show');
            });
    
            document.addEventListener('click', function (e) {
                if (!document.getElementById('categoryInput').contains(e.target)) {
                    document.getElementById('categoryDropdown').classList.remove('show');
                }
            });
    
            // Location autocomplete using Nominatim
            const locationInput = document.getElementById('locationInput');
            const locationSuggestions = document.getElementById('locationSuggestions');
    
            locationInput.addEventListener('input', function () {
                const query = this.value;
                if (query.length < 3) {
                    locationSuggestions.classList.remove('show');
                    return;
                }
        
                fetch('https://nominatim.openstreetmap.org/search?format=json&q=' + encodeURIComponent(query))
                    .then(res => res.json())
                    .then(data => {
                        locationSuggestions.innerHTML = '';
                        data.slice(0, 5).forEach(function (item) {
                            const li = document.createElement('a');
                            li.className = 'dropdown-item';
                            li.href = '#';
                            li.textContent = item.display_name;
                            li.onclick = function () {
                                locationInput.value = item.display_name;
                                locationSuggestions.classList.remove('show');
                                return false;
                            };
                            locationSuggestions.appendChild(li);
                        });
                
                        if (data.length > 0) {
                            locationSuggestions.classList.add('show');
                        } else {
                            locationSuggestions.classList.remove('show');
                        }
                    });
            });
    
            document.addEventListener('click', function (e) {
                if (!locationInput.contains(e.target) && !locationSuggestions.contains(e.target)) {
                    locationSuggestions.classList.remove('show');
                }
            });
    
            // Geolocation
            function getCurrentLocation() {
                if (navigator.geolocation) {
                    navigator.geolocation.getCurrentPosition(function (position) {
                        const lat = position.coords.latitude;
                        const lon = position.coords.longitude;
                        fetch('https://nominatim.openstreetmap.org/reverse?format=json&lat=' + lat + '&lon=' + lon)
                            .then(res => res.json())
                            .then(data => {
                                if (data && data.display_name) {
                                    locationInput.value = data.display_name;
                                }
                            });
                    }, function (err) {
                        alert('Could not get your location.');
                    });
                } else {
                    alert('Geolocation is not supported by your browser.');
                }
            }
            
            // Load featured providers
            loadFeaturedProviders();
            
            function loadFeaturedProviders() {
                fetch('/Home/GetFeaturedProviders')
                    .then(response => response.json())
                    .then(data => {
                        if (data.success && data.data.length > 0) {
                            const container = document.getElementById('featuredProviders');
                            container.innerHTML = '';
                            
                            data.data.forEach(provider => {
                                const providerCard = createProviderCard(provider);
                                container.appendChild(providerCard);
                            });
                        } else {
                            document.getElementById('featuredProviders').innerHTML = 
                                '<div class="col-12 text-center"><p class="text-muted">No providers available at the moment.</p></div>';
                        }
                    })
                    .catch(error => {
                        console.error('Error loading featured providers:', error);
                        document.getElementById('featuredProviders').innerHTML = 
                            '<div class="col-12 text-center"><p class="text-muted">Unable to load providers.</p></div>';
                    });
            }
            
            function createProviderCard(provider) {
                const col = document.createElement('div');
                col.className = 'col-lg-4 col-md-6';
                
                const imageSrc = provider.businessImagePath || provider.profileImagePath || '';
                const displayName = provider.shopName || `${provider.firstName} ${provider.lastName}`;
                const description = provider.shopDescription || provider.profileDescription || '';
                const address = provider.shopAddress || provider.address || '';
                
                col.innerHTML = `
                    <div class="card h-100 shadow-sm hover-card">
                        <div class="position-relative">
                            ${imageSrc ? 
                                `<img src="${imageSrc}" class="card-img-top" alt="${displayName}" style="height: 200px; object-fit: cover;">` :
                                `<div class="card-img-top bg-gradient-primary d-flex align-items-center justify-content-center" style="height: 200px;">
                                    <i class="fas fa-user fa-4x text-white"></i>
                                </div>`
                            }
                            
                            <div class="position-absolute top-0 start-0 m-2">
                                <span class="badge" style="background-color: ${provider.categoryColor}; color: white;">
                                    <i class="${provider.categoryIcon}"></i> ${provider.categoryName}
                                </span>
                            </div>
                            
                            ${provider.averageRating ? 
                                `<div class="position-absolute top-0 end-0 m-2">
                                    <span class="badge bg-warning text-dark">
                                        <i class="fas fa-star"></i> ${provider.averageRating.toFixed(1)}
                                    </span>
                                </div>` : ''
                            }
                        </div>
                        
                        <div class="card-body d-flex flex-column">
                            <div class="flex-grow-1">
                                <h5 class="card-title mb-2">${displayName}</h5>
                                
                                <p class="card-text text-muted small mb-2">
                                    ${description.length > 100 ? description.substring(0, 100) + '...' : description}
                                </p>
                                
                                <div class="d-flex align-items-center mb-2">
                                    <i class="fas fa-map-marker-alt text-muted me-2"></i>
                                    <small class="text-muted">${address}</small>
                                </div>
                                
                                ${provider.totalReviews > 0 ? `
                                    <div class="d-flex align-items-center mb-2">
                                        <div class="me-2">
                                            ${Array.from({length: 5}, (_, i) => 
                                                `<i class="fas fa-star ${i < provider.averageRating ? 'text-warning' : 'text-muted'}"></i>`
                                            ).join('')}
                                        </div>
                                        <small class="text-muted">(${provider.totalReviews} reviews)</small>
                                    </div>
                                ` : ''}
                            </div>
                            
                            <div class="mt-auto">
                                <div class="d-flex gap-2">
                                    <a href="/Provider/Details/${provider.id}" class="btn btn-primary btn-sm flex-grow-1">
                                        <i class="fas fa-eye"></i> View Profile
                                    </a>
                                    <button class="btn btn-outline-primary btn-sm" onclick="contactProvider('${provider.id}')">
                                        <i class="fas fa-envelope"></i>
                                    </button>
                                </div>
                            </div>
                        </div>
                    </div>
                `;
                
                return col;
            }
        </script>