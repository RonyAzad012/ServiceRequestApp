@model ServiceRequestApp.Models.ApplicationUser
@{
    ViewData["Title"] = "Requester Profile";
    Layout = "~/Views/Shared/_Layout.cshtml";
}

<h2>Requester Profile</h2>
<div class="card mb-3">
    <div class="card-body">
        <h4 class="card-title">@Model.FirstName @Model.LastName</h4>
        <p class="card-text"><strong>Email:</strong> @Model.Email</p>
        <p class="card-text"><strong>Phone:</strong> @Model.PhoneNumber</p>
        <p class="card-text"><strong>Address:</strong> @Model.Address</p>
        <p class="card-text"><strong>Zipcode:</strong> @Model.Zipcode</p>
    </div>
</div>
<a asp-action="Index" asp-controller="ServiceRequest" class="btn btn-secondary">Back to Requests</a>
