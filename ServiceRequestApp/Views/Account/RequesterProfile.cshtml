@model ServiceRequestApp.Models.ApplicationUser
@{
    ViewData["Title"] = "Requester Profile";
    Layout = "~/Views/Shared/_Layout.cshtml";
}

<div class="container-fluid py-4">
    <!-- Profile Header -->
    <div class="row mb-4">
        <div class="col-12">
            <div class="card shadow-lg border-0">
                <div class="card-body p-0">
                    <!-- Cover Image -->
                    <div class="position-relative">
                        <div class="bg-gradient-info" style="height: 200px; background: linear-gradient(135deg, #74b9ff 0%, #0984e3 100%);"></div>
                        <div class="position-absolute" style="bottom: -50px; left: 30px;">
                            <div class="d-flex align-items-end">
                                <!-- Profile Image -->
                                <div class="position-relative">
                                    @if (ViewBag.IsOwner == true || ViewBag.IsAdmin == true)
                                    {
                                        <!-- Editable profile image for owner/admin -->
                                        <div class="profile-image-container" style="cursor: pointer;" onclick="document.getElementById('profileImageInput').click()">
                                            @if (!string.IsNullOrEmpty(Model.ProfileImagePath))
                                            {
                                                <img src="@Model.ProfileImagePath" class="rounded-circle border border-4 border-white shadow" 
                                                     style="width: 120px; height: 120px; object-fit: cover;" alt="Profile Image" id="profileImage" />
                                            }
                                            else
                                            {
                                                <div class="rounded-circle border border-4 border-white shadow d-flex align-items-center justify-content-center bg-light" 
                                                     style="width: 120px; height: 120px;" id="profileImagePlaceholder">
                                                    <i class="fas fa-user fa-3x text-muted"></i>
                                                </div>
                                            }
                                            <!-- Upload Overlay -->
                                            <div class="position-absolute top-0 start-0 w-100 h-100 rounded-circle d-flex align-items-center justify-content-center" 
                                                 style="background: rgba(0,0,0,0.5); opacity: 0; transition: opacity 0.3s;" id="uploadOverlay">
                                                <i class="fas fa-camera text-white fa-2x"></i>
                                            </div>
                                        </div>
                                        <!-- Hidden File Input -->
                                        <input type="file" id="profileImageInput" accept="image/*" style="display: none;" />
                                    }
                                    else
                                    {
                                        <!-- Read-only profile image for public view -->
                                        @if (!string.IsNullOrEmpty(Model.ProfileImagePath))
                                        {
                                            <img src="@Model.ProfileImagePath" class="rounded-circle border border-4 border-white shadow" 
                                                 style="width: 120px; height: 120px; object-fit: cover;" alt="Profile Image" />
                                        }
                                        else
                                        {
                                            <div class="rounded-circle border border-4 border-white shadow d-flex align-items-center justify-content-center bg-light" 
                                                 style="width: 120px; height: 120px;">
                                                <i class="fas fa-user fa-3x text-muted"></i>
                                            </div>
                                        }
                                    }
                                    <!-- Status Badge -->
                                    <span class="position-absolute top-0 end-0 badge bg-success rounded-pill">
                                        <i class="fas fa-user-check me-1"></i>Active
                                    </span>
                                </div>
                                <div class="ms-4 mb-3">
                                    <h2 class="text-dark mb-1">@Model.FirstName @Model.LastName</h2>
                                    <p class="text-muted mb-2">Service Requester</p>
                                    <span class="badge bg-primary rounded-pill">
                                        <i class="fas fa-map-marker-alt me-1"></i>@Model.Address
                                    </span>
                                </div>
                            </div>
                        </div>
                    </div>
                    
                    <!-- Action Buttons -->
                    <div class="d-flex justify-content-end p-3">
                        <div class="btn-group" role="group">
                            @if (ViewBag.IsOwner == true || ViewBag.IsAdmin == true)
                            {
                                <a asp-action="EditRequesterProfile" class="btn btn-outline-primary">
                                    <i class="fas fa-edit me-2"></i>Edit Profile
                                </a>
                                <a asp-controller="ServiceRequest" asp-action="Create" class="btn btn-primary">
                                    <i class="fas fa-plus me-2"></i>New Request
                                </a>
                            }
                        </div>
                    </div>
                </div>
            </div>
        </div>
    </div>

    <!-- Dashboard Stats -->
    <div class="row mb-4">
        <div class="col-md-3 mb-3">
            <div class="card border-0 shadow-sm h-100">
                <div class="card-body text-center">
                    <div class="text-primary mb-2">
                        <i class="fas fa-clipboard-list fa-2x"></i>
                    </div>
                    <h4 class="mb-1" id="totalRequests">0</h4>
                    <p class="text-muted mb-0">Total Requests</p>
                    <small class="text-muted">All time</small>
                </div>
            </div>
        </div>
        <div class="col-md-3 mb-3">
            <div class="card border-0 shadow-sm h-100">
                <div class="card-body text-center">
                    <div class="text-success mb-2">
                        <i class="fas fa-check-circle fa-2x"></i>
                    </div>
                    <h4 class="mb-1" id="completedRequests">0</h4>
                    <p class="text-muted mb-0">Completed</p>
                    <small class="text-muted">Successfully finished</small>
                </div>
            </div>
        </div>
        <div class="col-md-3 mb-3">
            <div class="card border-0 shadow-sm h-100">
                <div class="card-body text-center">
                    <div class="text-warning mb-2">
                        <i class="fas fa-clock fa-2x"></i>
                    </div>
                    <h4 class="mb-1" id="pendingRequests">0</h4>
                    <p class="text-muted mb-0">In Progress</p>
                    <small class="text-muted">Currently active</small>
                </div>
            </div>
        </div>
        <div class="col-md-3 mb-3">
            <div class="card border-0 shadow-sm h-100">
                <div class="card-body text-center">
                    <div class="text-info mb-2">
                        <i class="fas fa-star fa-2x"></i>
                    </div>
                    <h4 class="mb-1" id="averageRating">0.0</h4>
                    <p class="text-muted mb-0">Avg Rating</p>
                    <small class="text-muted">Given to providers</small>
                </div>
            </div>
        </div>
    </div>

    <!-- Additional Stats Row -->
    <div class="row mb-4">
        <div class="col-md-6 mb-3">
            <div class="card border-0 shadow-sm h-100">
                <div class="card-body text-center">
                    <div class="text-success mb-2">
                        <i class="fas fa-money-bill-wave fa-2x"></i>
                    </div>
                    <h4 class="mb-1" id="totalSpent">à§³0.00</h4>
                    <p class="text-muted mb-0">Total Spent</p>
                    <small class="text-muted">On services</small>
                </div>
            </div>
        </div>
        <div class="col-md-6 mb-3">
            <div class="card border-0 shadow-sm h-100">
                <div class="card-body text-center">
                    <div class="text-warning mb-2">
                        <i class="fas fa-clock fa-2x"></i>
                    </div>
                    <h4 class="mb-1" id="pendingPayments">0</h4>
                    <p class="text-muted mb-0">Pending Payments</p>
                    <small class="text-muted">Awaiting completion</small>
                </div>
            </div>
        </div>
    </div>

    <!-- Main Content -->
    <div class="row">
        <!-- Left Column -->
        <div class="col-lg-8">
            <!-- Personal Information -->
            <div class="card border-0 shadow-sm mb-4">
                <div class="card-header bg-white border-0 py-3">
                    <h5 class="mb-0"><i class="fas fa-user me-2 text-primary"></i>Personal Information</h5>
                </div>
                <div class="card-body">
                    <div class="row">
                        <div class="col-md-6 mb-3">
                            <label class="form-label text-muted">Full Name</label>
                            <p class="fw-bold">@Model.FirstName @Model.LastName</p>
                        </div>
                        <div class="col-md-6 mb-3">
                            <label class="form-label text-muted">Email</label>
                            <p class="fw-bold">@Model.Email</p>
                        </div>
                        <div class="col-md-6 mb-3">
                            <label class="form-label text-muted">Phone</label>
                            <p class="fw-bold">@Model.PhoneNumber</p>
                        </div>
                        <div class="col-md-6 mb-3">
                            <label class="form-label text-muted">Zipcode</label>
                            <p class="fw-bold">@Model.Zipcode</p>
                        </div>
                        <div class="col-12 mb-3">
                            <label class="form-label text-muted">Address</label>
                            <p class="fw-bold">@Model.Address</p>
                        </div>
                    </div>
                </div>
            </div>

            <!-- Recent Requests - Only visible to owner/admin -->
            @if (ViewBag.IsOwner == true || ViewBag.IsAdmin == true)
            {
                <div class="card border-0 shadow-sm">
                    <div class="card-header bg-white border-0 py-3 d-flex justify-content-between align-items-center">
                        <h5 class="mb-0"><i class="fas fa-list me-2 text-info"></i>Recent Requests</h5>
                        <a asp-controller="ServiceRequest" asp-action="Index" class="btn btn-sm btn-outline-primary">View All</a>
                    </div>
                    <div class="card-body">
                        <div id="recentRequests">
                            <div class="text-center py-4">
                                <div class="spinner-border text-primary" role="status">
                                    <span class="visually-hidden">Loading...</span>
                                </div>
                            </div>
                        </div>
                    </div>
                </div>
            }
        </div>

        <!-- Right Column -->
        <div class="col-lg-4">
            <!-- Quick Actions - Only visible to owner/admin -->
            @if (ViewBag.IsOwner == true || ViewBag.IsAdmin == true)
            {
                <div class="card border-0 shadow-sm mb-4">
                    <div class="card-header bg-white border-0 py-3">
                        <h5 class="mb-0"><i class="fas fa-bolt me-2 text-primary"></i>Quick Actions</h5>
                    </div>
                    <div class="card-body">
                        <div class="d-grid gap-2">
                            <a asp-controller="ServiceRequest" asp-action="Create" class="btn btn-primary">
                                <i class="fas fa-plus me-2"></i>Create New Request
                            </a>
                            <a asp-controller="ServiceRequest" asp-action="Index" class="btn btn-outline-secondary">
                                <i class="fas fa-list me-2"></i>View All Requests
                            </a>
                            <a asp-controller="Provider" asp-action="Index" class="btn btn-outline-info">
                                <i class="fas fa-search me-2"></i>Find Providers
                            </a>
                            <a asp-controller="Message" asp-action="Index" class="btn btn-outline-success">
                                <i class="fas fa-envelope me-2"></i>Messages
                            </a>
                        </div>
                    </div>
                </div>
            }

            <!-- Service Categories -->
            <div class="card border-0 shadow-sm mb-4">
                <div class="card-header bg-white border-0 py-3">
                    <h5 class="mb-0"><i class="fas fa-tags me-2 text-success"></i>Popular Services</h5>
                </div>
    <div class="card-body">
                    <div id="popularCategories">
                        <div class="text-center py-3">
                            <div class="spinner-border spinner-border-sm text-primary" role="status">
                                <span class="visually-hidden">Loading...</span>
                            </div>
                        </div>
                    </div>
                </div>
            </div>

            <!-- Account Status -->
            <div class="card border-0 shadow-sm">
                <div class="card-header bg-white border-0 py-3">
                    <h5 class="mb-0"><i class="fas fa-shield-alt me-2 text-warning"></i>Account Status</h5>
                </div>
                <div class="card-body text-center">
                    <div class="text-success mb-2">
                        <i class="fas fa-check-circle fa-3x"></i>
                    </div>
                    <h5 class="text-success">Active</h5>
                    <p class="text-muted">Your account is in good standing</p>
                    <div class="mt-3">
                        <small class="text-muted">Member since</small>
                        <p class="fw-bold">@Model.CreatedAt.ToString("MMMM yyyy")</p>
                    </div>
                </div>
            </div>
        </div>
    </div>
</div>

<!-- Review Modal -->
<div class="modal fade" id="reviewModal" tabindex="-1" aria-labelledby="reviewModalLabel" aria-hidden="true">
    <div class="modal-dialog">
        <div class="modal-content">
            <div class="modal-header">
                <h5 class="modal-title" id="reviewModalLabel">
                    <i class="fas fa-star me-2 text-warning"></i>Review Provider
                </h5>
                <button type="button" class="btn-close" data-bs-dismiss="modal" aria-label="Close"></button>
            </div>
            <div class="modal-body">
                <div class="mb-3">
                    <label class="form-label">Provider:</label>
                    <p class="fw-bold" id="reviewProviderName"></p>
                </div>
                
                <div class="mb-3">
                    <label class="form-label">Rating <span class="text-danger">*</span></label>
                    <div class="rating-input">
                        <div class="d-flex gap-1">
                            <input type="radio" name="rating" value="1" id="rating1" class="d-none">
                            <label for="rating1" class="rating-star" data-rating="1">
                                <i class="fas fa-star"></i>
                            </label>
                            <input type="radio" name="rating" value="2" id="rating2" class="d-none">
                            <label for="rating2" class="rating-star" data-rating="2">
                                <i class="fas fa-star"></i>
                            </label>
                            <input type="radio" name="rating" value="3" id="rating3" class="d-none">
                            <label for="rating3" class="rating-star" data-rating="3">
                                <i class="fas fa-star"></i>
                            </label>
                            <input type="radio" name="rating" value="4" id="rating4" class="d-none">
                            <label for="rating4" class="rating-star" data-rating="4">
                                <i class="fas fa-star"></i>
                            </label>
                            <input type="radio" name="rating" value="5" id="rating5" class="d-none">
                            <label for="rating5" class="rating-star" data-rating="5">
                                <i class="fas fa-star"></i>
                            </label>
                        </div>
                    </div>
                </div>
                
                <div class="mb-3">
                    <label for="reviewComment" class="form-label">Comment (Optional)</label>
                    <textarea class="form-control" id="reviewComment" rows="3" placeholder="Share your experience with this provider..."></textarea>
                </div>
                
                <input type="hidden" id="reviewServiceRequestId" />
                <input type="hidden" id="reviewProviderId" />
            </div>
            <div class="modal-footer">
                <button type="button" class="btn btn-secondary" data-bs-dismiss="modal">Cancel</button>
                <button type="button" class="btn btn-warning" onclick="submitReview()">
                    <i class="fas fa-star me-2"></i>Submit Review
                </button>
            </div>
        </div>
    </div>
</div>

@section Styles {
    <style>
        .rating-star {
            font-size: 1.5rem;
            color: #ddd;
            cursor: pointer;
            transition: color 0.2s;
        }
        
        .rating-star:hover,
        .rating-star.active {
            color: #ffc107;
        }
        
        .profile-image-container:hover #uploadOverlay {
            opacity: 1 !important;
        }
        
        .profile-image-container {
            transition: transform 0.2s;
        }
        
        .profile-image-container:hover {
            transform: scale(1.05);
        }
    </style>
}

@section Scripts {
    <script>
        $(document).ready(function() {
            loadDashboardStats();
            loadRecentRequests();
            loadPopularCategories();
        });

        function loadDashboardStats() {
            $.ajax({
                url: '@Url.Action("GetRequesterStats", "Account")',
                type: 'GET',
                data: { requesterId: '@Model.Id' },
                success: function(data) {
                    if (data.success) {
                        $('#totalRequests').text(data.totalRequests);
                        $('#completedRequests').text(data.completedRequests);
                        $('#pendingRequests').text(data.pendingRequests);
                        $('#averageRating').text(data.averageRating.toFixed(1));
                        $('#totalSpent').text('à§³' + data.totalSpent.toFixed(2));
                        
                        // Calculate pending payments (requests with payment but not completed)
                        var pendingPayments = data.totalRequests - data.completedRequests;
                        $('#pendingPayments').text(pendingPayments);
                    }
                },
                error: function() {
                    console.log('Error loading dashboard stats');
                }
            });
        }

        function loadRecentRequests() {
            $.ajax({
                url: '@Url.Action("GetRecentRequests", "Account")',
                type: 'GET',
                data: { requesterId: '@Model.Id' },
                success: function(data) {
                    if (data.success && data.requests.length > 0) {
                        let html = '';
                        data.requests.forEach(function(request) {
                            let reviewButton = '';
                            if (request.status.toLowerCase() === 'completed' && !request.hasReview) {
                                reviewButton = `
                                    <button class="btn btn-sm btn-outline-warning ms-2" onclick="openReviewModal(${request.id}, '${request.providerId}', '${request.providerName}')">
                                        <i class="fas fa-star me-1"></i>Review
                                    </button>
                                `;
                            }
                            
                            html += `
                                <div class="d-flex align-items-center mb-3 p-3 border rounded">
                                    <div class="flex-shrink-0">
                                        <div class="bg-primary text-white rounded-circle d-flex align-items-center justify-content-center" style="width: 40px; height: 40px;">
                                            <i class="fas fa-tools"></i>
                                        </div>
                                    </div>
                                    <div class="flex-grow-1 ms-3">
                                        <h6 class="mb-1">${request.title}</h6>
                                        <p class="text-muted mb-1 small">${request.description.substring(0, 50)}...</p>
                                        <div class="d-flex align-items-center gap-2">
                                            <span class="badge bg-${getStatusColor(request.status)}">${request.status}</span>
                                            ${reviewButton}
                                        </div>
                                    </div>
                                    <div class="flex-shrink-0">
                                        <small class="text-muted">${formatDate(request.createdAt)}</small>
                                    </div>
                                </div>
                            `;
                        });
                        $('#recentRequests').html(html);
                    } else {
                        $('#recentRequests').html('<div class="text-center py-4 text-muted"><i class="fas fa-inbox fa-2x mb-2"></i><p>No recent requests</p></div>');
                    }
                },
                error: function() {
                    $('#recentRequests').html('<div class="text-center py-4 text-muted"><i class="fas fa-exclamation-triangle fa-2x mb-2"></i><p>Error loading requests</p></div>');
                }
            });
        }

        function loadPopularCategories() {
            $.ajax({
                url: '@Url.Action("GetPopularCategories", "Category")',
                type: 'GET',
                success: function(data) {
                    if (data.success && data.categories.length > 0) {
                        let html = '';
                        data.categories.slice(0, 6).forEach(function(category) {
                            html += `
                                <a href="@Url.Action("Index", "Provider")?categoryId=${category.id}" class="d-flex align-items-center mb-2 text-decoration-none">
                                    <div class="flex-shrink-0 me-2">
                                        <i class="${category.icon} text-primary"></i>
                                    </div>
                                    <div class="flex-grow-1">
                                        <small class="text-dark">${category.name}</small>
                                    </div>
                                </a>
                            `;
                        });
                        $('#popularCategories').html(html);
                    } else {
                        $('#popularCategories').html('<div class="text-center py-3 text-muted"><small>No categories available</small></div>');
                    }
                },
                error: function() {
                    $('#popularCategories').html('<div class="text-center py-3 text-muted"><small>Error loading categories</small></div>');
                }
            });
        }

        function getStatusColor(status) {
            switch(status.toLowerCase()) {
                case 'completed': return 'success';
                case 'pending': return 'warning';
                case 'in progress': return 'info';
                case 'cancelled': return 'danger';
                default: return 'secondary';
            }
        }

        function formatDate(dateString) {
            const date = new Date(dateString);
            return date.toLocaleDateString();
        }

        // Profile Image Upload
        $(document).ready(function() {
            $('#profileImageInput').on('change', function(e) {
                const file = e.target.files[0];
                if (file) {
                    const formData = new FormData();
                    formData.append('profileImage', file);
                    formData.append('userId', '@Model.Id');

                    $.ajax({
                        url: '@Url.Action("UploadProfileImage", "Account")',
                        type: 'POST',
                        data: formData,
                        processData: false,
                        contentType: false,
                        success: function(response) {
                            if (response.success) {
                                // Update the image
                                if ($('#profileImage').length) {
                                    $('#profileImage').attr('src', response.imagePath + '?t=' + new Date().getTime());
                                } else {
                                    $('#profileImagePlaceholder').html(`<img src="${response.imagePath}" class="rounded-circle border border-4 border-white shadow" style="width: 120px; height: 120px; object-fit: cover;" alt="Profile Image" id="profileImage" />`);
                                }
                                Swal.fire('Success!', 'Profile image updated successfully.', 'success');
                            } else {
                                Swal.fire('Error!', response.message || 'Failed to upload image.', 'error');
                            }
                        },
                        error: function() {
                            Swal.fire('Error!', 'Failed to upload image. Please try again.', 'error');
                        }
                    });
                }
            });

            // Profile image hover effects
            $('.profile-image-container').hover(
                function() {
                    $('#uploadOverlay').css('opacity', '1');
                },
                function() {
                    $('#uploadOverlay').css('opacity', '0');
                }
            );

            // Rating star interaction
            $('.rating-star').on('click', function() {
                const rating = $(this).data('rating');
                $('.rating-star').removeClass('active');
                $(this).addClass('active');
                $(this).prevAll().addClass('active');
                $(`#rating${rating}`).prop('checked', true);
            });

            $('.rating-star').on('mouseenter', function() {
                const rating = $(this).data('rating');
                $('.rating-star').removeClass('active');
                $(this).addClass('active');
                $(this).prevAll().addClass('active');
            });

            $('.rating-input').on('mouseleave', function() {
                const checkedRating = $('input[name="rating"]:checked').val();
                $('.rating-star').removeClass('active');
                if (checkedRating) {
                    $(`.rating-star[data-rating="${checkedRating}"]`).addClass('active');
                    $(`.rating-star[data-rating="${checkedRating}"]`).prevAll().addClass('active');
                }
            });
        });

        // Review Modal Functions
        function openReviewModal(serviceRequestId, providerId, providerName) {
            $('#reviewModal').modal('show');
            $('#reviewServiceRequestId').val(serviceRequestId);
            $('#reviewProviderId').val(providerId);
            $('#reviewProviderName').text(providerName);
        }

        function submitReview() {
            const serviceRequestId = $('#reviewServiceRequestId').val();
            const providerId = $('#reviewProviderId').val();
            const rating = $('input[name="rating"]:checked').val();
            const comment = $('#reviewComment').val();

            if (!rating) {
                Swal.fire('Error!', 'Please select a rating.', 'error');
                return;
            }

            $.ajax({
                url: '@Url.Action("SubmitReview", "Review")',
                type: 'POST',
                data: {
                    serviceRequestId: serviceRequestId,
                    providerId: providerId,
                    rating: rating,
                    comment: comment
                },
                success: function(response) {
                    if (response.success) {
                        $('#reviewModal').modal('hide');
                        Swal.fire('Success!', 'Review submitted successfully.', 'success');
                        // Reload recent requests to update the review button
                        loadRecentRequests();
                    } else {
                        Swal.fire('Error!', response.message || 'Failed to submit review.', 'error');
                    }
                },
                error: function() {
                    Swal.fire('Error!', 'Failed to submit review. Please try again.', 'error');
                }
            });
        }
    </script>
}