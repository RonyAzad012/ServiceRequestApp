@model IEnumerable<ServiceRequestApp.Models.ApplicationUser>

@{
    ViewData["Title"] = "All Service Providers";
}

<h2 class="mb-4">All Service Providers</h2>
@if (!Model.Any())
{
    <div class="alert alert-info">No providers found.</div>
}
else
{
    <div class="row row-cols-1 row-cols-md-3 g-4">
        @foreach (var provider in Model)
        {
            <div class="col">
                <div class="card h-100">
                    <div class="card-body">
                        <h5 class="card-title">@provider.FirstName @provider.LastName</h5>
                        <p class="card-text">
                            <strong>Email:</strong> @provider.Email<br />
                            <strong>Phone:</strong> @provider.PhoneNumber<br />
                            <strong>Address:</strong> @provider.Address
                        </p>
                        <a asp-action="ProviderProfile" asp-route-id="@provider.Id" class="btn btn-outline-primary btn-sm">
                            View Profile
                        </a>
                    </div>
                </div>
            </div>
        }
    </div>
}
