@model IEnumerable<ServiceRequestApp.Models.ApplicationUser>

@{
    ViewData["Title"] = "All Service Providers";
    var cities = ViewBag.Cities as List<string> ?? new List<string>();
    var categories = ViewBag.Categories as List<ServiceRequestApp.Models.Category> ?? new List<ServiceRequestApp.Models.Category>();
    var selectedCategory = ViewBag.SelectedCategory as string;
    var selectedCity = ViewBag.SelectedCity as string;
    var selectedRating = ViewBag.SelectedRating as string;
    var searchTerm = ViewBag.SearchTerm as string;
}

<div class="container-fluid">
    <!-- Header Section -->
    <div class="row mb-4">
        <div class="col-12">
            <div class="d-flex justify-content-between align-items-center">
                <div>
                    <h1 class="h2 mb-1">Service Providers</h1>
                    <p class="text-muted mb-0">Find trusted professionals for all your service needs</p>
                </div>
                <div class="text-end">
                    <span class="badge bg-primary fs-6">@Model.Count() Providers</span>
                </div>
            </div>
        </div>
    </div>

    <!-- Filters Section -->
    <div class="row mb-4">
        <div class="col-12">
            <div class="card border-0 shadow-sm">
                <div class="card-body">
                    <form method="get" class="row g-3">
                        <div class="col-md-3">
                            <label for="search" class="form-label fw-semibold">Search</label>
                            <input type="text" class="form-control" id="search" name="search" 
                                   value="@searchTerm" placeholder="Search providers, shops...">
                        </div>
                        <div class="col-md-2">
                            <label for="city" class="form-label fw-semibold">City</label>
                            <select class="form-select" id="city" name="city">
                                <option value="">All Cities</option>
                                @foreach (var city in cities)
                                {
                                    <option value="@city" selected="@(selectedCity == city)">@city</option>
                                }
                            </select>
                        </div>
                        <div class="col-md-2">
                            <label for="rating" class="form-label fw-semibold">Min Rating</label>
                            <select class="form-select" id="rating" name="rating">
                                <option value="">Any Rating</option>
                                <option value="5" selected="@(selectedRating == "5")">5 Stars</option>
                                <option value="4" selected="@(selectedRating == "4")">4+ Stars</option>
                                <option value="3" selected="@(selectedRating == "3")">3+ Stars</option>
                                <option value="2" selected="@(selectedRating == "2")">2+ Stars</option>
                            </select>
                        </div>
                        <div class="col-md-2">
                            <label for="category" class="form-label fw-semibold">Category</label>
                            <select class="form-select" id="category" name="category">
                                <option value="">All Categories</option>
                                @foreach (var category in categories)
                                {
                                    <option value="@category.Name" selected="@(selectedCategory == category.Name)">@category.Name</option>
                                }
                            </select>
                        </div>
                        <div class="col-md-3 d-flex align-items-end">
                            <button type="submit" class="btn btn-primary me-2">
                                <i class="fas fa-search me-1"></i>Filter
                            </button>
                            <a href="@Url.Action("AllProviders")" class="btn btn-outline-secondary">
                                <i class="fas fa-times me-1"></i>Clear
                            </a>
                        </div>
                    </form>
                </div>
            </div>
        </div>
    </div>

    <!-- Results Section -->
    @if (!Model.Any())
    {
        <div class="row">
            <div class="col-12">
                <div class="text-center py-5">
                    <i class="fas fa-search fa-3x text-muted mb-3"></i>
                    <h4 class="text-muted">No providers found</h4>
                    <p class="text-muted">Try adjusting your search criteria or browse all providers.</p>
                    <a href="@Url.Action("AllProviders")" class="btn btn-primary">
                        <i class="fas fa-list me-1"></i>View All Providers
                    </a>
                </div>
            </div>
        </div>
    }
    else
    {
        <div class="row g-4">
            @foreach (var provider in Model)
            {
                var averageRating = provider.Reviews?.Any() == true ? provider.Reviews.Average(r => r.Rating) : 0;
                var reviewCount = provider.Reviews?.Count ?? 0;
                
                <div class="col-lg-4 col-md-6">
                    <div class="card h-100 border-0 shadow-sm provider-card">
                        <div class="card-body p-4">
                            <!-- Provider Header -->
                            <div class="d-flex align-items-start mb-3">
                                <div class="provider-avatar me-3">
                                    @if (!string.IsNullOrEmpty(provider.ProfileImagePath))
                                    {
                                        <img src="@provider.ProfileImagePath" alt="@provider.FirstName" class="rounded-circle" style="width: 60px; height: 60px; object-fit: cover;">
                                    }
                                    else
                                    {
                                        <div class="rounded-circle bg-primary d-flex align-items-center justify-content-center" style="width: 60px; height: 60px;">
                                            <i class="fas fa-user text-white fs-4"></i>
                                        </div>
                                    }
                                </div>
                                <div class="flex-grow-1">
                                    <h5 class="card-title mb-1">@provider.FirstName @provider.LastName</h5>
                                    @if (!string.IsNullOrEmpty(provider.ShopName))
                                    {
                                        <p class="text-muted mb-1 small">@provider.ShopName</p>
                                    }
                                    <div class="rating mb-2">
                                        @for (int i = 1; i <= 5; i++)
                                        {
                                            <i class="fas fa-star @(i <= Math.Round(averageRating) ? "text-warning" : "text-muted")"></i>
                                        }
                                        <span class="ms-1 small text-muted">(@reviewCount reviews)</span>
                                    </div>
                                </div>
                            </div>

                            <!-- Shop Information -->
                            @if (!string.IsNullOrEmpty(provider.ShopDescription))
                            {
                                <p class="card-text text-muted small mb-3" style="display: -webkit-box; -webkit-line-clamp: 2; -webkit-box-orient: vertical; overflow: hidden;">
                                    @provider.ShopDescription
                                </p>
                            }

                            <!-- Contact Information -->
                            <div class="contact-info mb-3">
                                <div class="d-flex align-items-center mb-1">
                                    <i class="fas fa-map-marker-alt text-primary me-2 small"></i>
                                    <span class="small">@provider.City</span>
                                </div>
                                <div class="d-flex align-items-center mb-1">
                                    <i class="fas fa-phone text-success me-2 small"></i>
                                    <span class="small">@provider.PhoneNumber</span>
                                </div>
                                <div class="d-flex align-items-center">
                                    <i class="fas fa-envelope text-info me-2 small"></i>
                                    <span class="small">@provider.Email</span>
                                </div>
                            </div>

                            <!-- Business Credentials -->
                            @if (!string.IsNullOrEmpty(provider.BusinessCredentials))
                            {
                                <div class="credentials mb-3">
                                    <span class="badge bg-light text-dark border">
                                        <i class="fas fa-certificate me-1"></i>Verified Business
                                    </span>
                                </div>
                            }

                            <!-- Action Button -->
                            <div class="d-grid">
                                <a asp-action="ProviderProfile" asp-route-id="@provider.Id" class="btn btn-primary">
                                    <i class="fas fa-eye me-1"></i>View Profile
                                </a>
                            </div>
                        </div>
                    </div>
                </div>
            }
        </div>
    }
</div>

@section Styles {
    <style>
        .provider-card {
            transition: all 0.3s ease;
            border-radius: 12px;
        }
        
        .provider-card:hover {
            transform: translateY(-5px);
            box-shadow: 0 10px 25px rgba(0,0,0,0.1) !important;
        }
        
        .provider-avatar img {
            border: 3px solid #e9ecef;
        }
        
        .rating .fa-star {
            font-size: 0.9rem;
        }
        
        .contact-info .small {
            font-size: 0.85rem;
        }
        
        .card-title {
            font-weight: 600;
            color: #2c3e50;
        }
        
        .credentials .badge {
            font-size: 0.75rem;
        }
        
        .form-label {
            color: #495057;
            font-size: 0.9rem;
        }
        
        .form-control, .form-select {
            border-radius: 8px;
            border: 1px solid #dee2e6;
        }
        
        .form-control:focus, .form-select:focus {
            border-color: #0d6efd;
            box-shadow: 0 0 0 0.2rem rgba(13, 110, 253, 0.25);
        }
        
        .btn {
            border-radius: 8px;
            font-weight: 500;
        }
        
        .card {
            border-radius: 12px;
        }
    </style>
}
